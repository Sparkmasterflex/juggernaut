!!! XML
!!! 5
%html
  %head
    %title if(keithRaymond) { Webdeveloper, Application Developer, Flash Developer }
    %meta{:name => "HandheldFriendly", :content => "True"}
    %meta{:name => "MobileOptimized", :content => "320"}
    %meta{:name => "viewport", :content => "width=device-width, maximum-scale=1.0"}
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %header.blk-gradient
      %h1 Juggernaut Web Editor 2.0
      %h2 ifkeithraymond.com editor
      %nav
        %ul
          - if current_user
            %li= "welcome #{current_user.first_name}"
            %li 
              %span.menu.icon Menu
              %menu
                %li= link_to "Dashboard", "/"
                %li= link_to "Profile", "#"
                %li= link_to "Pages", "#"
                %li= link_to "Projects", "#"
                %li= link_to "Blog", "#"
          - else
            %li= link_to "Login", login_path
    = yield